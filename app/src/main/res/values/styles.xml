<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomSheetSectionTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomSheetRow" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="BottomSheetIcon" parent="">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="BottomSheetText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BottomSheetText.Label">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="BottomSheetText.Value">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetText.Label.Total">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetText.Value.Total">
        <item name="android:textColor">@color/purple_500</item> </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray_light_route</item>
        <item name="colorControlActivated">@color/star_yellow</item>
    </style>
</resources>