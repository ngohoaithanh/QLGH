<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <!-- Tiêu đề -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/header_background"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đặt Đơn Giao Hàng"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhanh chóng • Tiện lợi • Uy tín"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <!-- Thông tin người gửi -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_sender_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_sender"
                        app:tint="@color/colorPrimary"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thông tin người gửi"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_sender_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nhấn để nhập thông tin"
                    android:textColor="#757575"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_edit"
                    android:layout_marginBottom="8dp"/>

                <!-- Form nhập thông tin người gửi (ẩn ban đầu) -->
                <LinearLayout
                    android:id="@+id/form_sender_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Họ tên"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/et_sender_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nhập họ tên người gửi"
                        android:background="@drawable/edit_text_border"
                        android:layout_marginBottom="8dp"
                        android:textColorHint="#999999"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số điện thoại"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"/>

                    <EditText
                        android:id="@+id/et_sender_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0xxxxxxxxx"
                        android:inputType="phone"
                        android:background="@drawable/edit_text_border"
                        android:layout_marginBottom="8dp"
                        android:textColorHint="#999999"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ lấy hàng"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"/>

<!--                    <AutoCompleteTextView-->
<!--                        android:id="@+id/actv_sender_address"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:hint="Nhập địa chỉ chi tiết"-->
<!--                        android:background="@drawable/edit_text_border"-->
<!--                        android:layout_marginBottom="16dp"-->
<!--                        android:textColorHint="#999999"-->
<!--                        android:textColor="@color/black"-->
<!--                        android:completionThreshold="3"-->
<!--                        android:dropDownHeight="300dp"-->
<!--                        android:dropDownVerticalOffset="4dp"/>-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <AutoCompleteTextView
                            android:id="@+id/actv_sender_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nhập địa chỉ chi tiết"
                            android:background="@drawable/edit_text_border"
                            android:textColorHint="#999999"
                            android:textColor="@color/black"
                            android:completionThreshold="3"
                            android:dropDownHeight="300dp"
                            android:dropDownVerticalOffset="4dp"
                            android:paddingEnd="44dp" />

                        <ImageButton
                            android:id="@+id/btn_pick_current_location"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="6dp"
                            android:src="@drawable/ic_my_location"
                            app:tint="@color/colorPrimary" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Thông tin người nhận -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_receiver_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_receiver"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thông tin người nhận"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_receiver_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nhấn để nhập thông tin"
                    android:textColor="#757575"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_edit"
                    android:layout_marginBottom="8dp"/>

                <!-- Form nhập thông tin người nhận (ẩn ban đầu) -->
                <LinearLayout
                    android:id="@+id/form_receiver_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Họ tên"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/et_receiver_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nhập họ tên người nhận"
                        android:background="@drawable/edit_text_border"
                        android:layout_marginBottom="8dp"
                        android:textColorHint="#999999"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số điện thoại"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"/>

                    <EditText
                        android:id="@+id/et_receiver_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0xxxxxxxxx"
                        android:inputType="phone"
                        android:background="@drawable/edit_text_border"
                        android:layout_marginBottom="8dp"
                        android:textColorHint="#999999"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ giao hàng"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"/>

                    <AutoCompleteTextView
                        android:id="@+id/actv_receiver_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nhập địa chỉ chi tiết"
                        android:background="@drawable/edit_text_border"
                        android:layout_marginBottom="16dp"
                        android:textColorHint="#999999"
                        android:textColor="@color/black"
                        android:completionThreshold="3"
                        android:dropDownHeight="300dp"
                        android:dropDownVerticalOffset="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Thông tin hàng hóa -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_product_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_product"
                        android:layout_marginEnd="8dp"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thông tin hàng hóa"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_product_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nhấn để nhập thông tin"
                    android:textColor="#757575"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_edit"
                    android:layout_marginBottom="8dp"/>

                <!-- Form nhập thông tin hàng hóa (ẩn ban đầu) -->
                <LinearLayout
                    android:id="@+id/form_product_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Khối lượng (kg)"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/et_product_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0.5"
                        android:inputType="numberDecimal"
                        android:background="@drawable/edit_text_border"
                        android:textColorHint="#999999"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ghi chú"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="16dp"/>

                    <EditText
                        android:id="@+id/et_product_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Yêu cầu đặc biệt (nếu có)"
                        android:background="@drawable/edit_text_border"
                        android:layout_marginBottom="16dp"
                        android:textColorHint="#999999"
                        android:textColor="@color/black"/>

                    <Button
                        android:id="@+id/btnCalculateFee"
                        android:text="Tính phí &amp; Lưu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@drawable/button_primary"
                        android:textColor="@color/white"
                        android:textAllCaps="false"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Chọn dịch vụ -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/white">


        </androidx.cardview.widget.CardView>

        <!-- Thu hộ COD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_cod"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Chi phí &amp; Thanh toán"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"/>

                    <ImageButton
                        android:id="@+id/btnCodInfo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info_outline"
                        android:background="?attr/selectableItemBackgroundBorderless"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tài xế sẽ ứng trước tiền cho người gửi và thu lại đúng số tiền đó từ người nhận hàng."
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số tiền cần thu (VND)"
                    android:textColor="@color/colorPrimaryDark"/>

                <EditText
                    android:id="@+id/et_cod_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:inputType="number"
                    android:background="@drawable/edit_text_border"
                    android:layout_marginBottom="16dp"
                    android:textColorHint="#999999"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Phí vận chuyển:"
                            android:textColor="#666666"/>

                        <TextView
                            android:id="@+id/tv_shipping_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0đ"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Phí COD (1%):"
                            android:textColor="#666666"/>

                        <TextView
                            android:id="@+id/tv_cod_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0đ"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginVertical="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tổng cộng:"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tv_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0đ"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bên thanh toán phí"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"/>

                <RelativeLayout
                    android:id="@+id/optionSenderPays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="8dp"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:text="Người gửi trả tiền mặt"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rbSenderPays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:checked="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/optionReceiverPays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="8dp"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:text="Người nhận trả tiền mặt"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/rbReceiverPays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:clickable="false"
                        android:focusable="false"/>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Nút hành động -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hủy"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_outline"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="false"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đặt đơn ngay"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_primary"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>